    "@truffle/contract": "^4.2.23",
    "@truffle/hdwallet-provider": "^1.1.0",
    "singularitynet-token-contracts": "^2.0.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "^2.0.2",
    "eth-gas-reporter": "^0.1.12",
    "fs-extra": "^5.0.0",
